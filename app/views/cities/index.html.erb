<div class="map">
	<%= image_tag @city.neighborhood_map %>
</div>
<div class="info">
	<% count = 0 %>
	<% @city.neighborhoods.each do |hood| %>
		<% if count % 3 == 0 %>
		<div class="hood_row">
		<% end %>
			<div class="hood">
				<h2><%= hood.name %></h2>
				<%= image_tag hood.small_image %>
				<p><%= hood.description %>
			</div>
		<%if count % 3 == 2 %>
		</div>
		<% end %>
		<% count += 1 %>
	<% end %>
</div>